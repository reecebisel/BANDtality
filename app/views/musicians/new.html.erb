<div class="login-modal modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h1 class="text-center">4. Musician</h1>
      </div>
      <div class="modal-body">
        <%= form_for @musician, :html => { :class => "form col-md-12 center-block" } do |f| %>
          <div class="form-group">  
            <%= f.text_field :instrument, autofocus: true, :class => "form-control input-lg", placeholder: "Instrument (ex. banjo, voice...)" %>
          </div>
          <div class="form-group">  
            <%= f.text_field :genre, autofocus: true, :class => "form-control input-lg", placeholder: "Genre (ex. hip hop)" %>
          </div>
          <b>Address</b>
        	<%= f.fields_for :address do |builder| %>
	          <div class="form-group">  
	            <%= builder.text_field :street, autofocus: true, :class => "form-control input-lg", placeholder: "Street" %>
	          </div>
	          <div class="form-group">
	            <%= builder.text_field :city, autocomplete: "off", :class => "form-control input-lg", placeholder: "City" %>
	          </div>
	          <div class="form-group">
	            <%= builder.text_field :state, autocomplete: "off", :class => "form-control input-lg", placeholder: "State" %>
	          </div>
	          <div class="form-group">
	            <%= builder.text_field :zip, autocomplete: "off", :class => "form-control input-lg", placeholder: "Zip" %>
	          </div>
          <%end%>
	          <div class="form-group">
	            <%= f.submit "Done", :class => "btn btn-primary btn-lg btn-block" %>
	          </div>
        <% end %>
      </div>
      <div class="modal-footer">
          <div class="col-md-12">
          </div>
      </div>  
    </div>
  </div>
</div>
