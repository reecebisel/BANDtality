<div class="login-modal modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h1 class="text-center">4. Visual Artist</h1>
      </div>
      <div class="modal-body">
        <%= form_for @visual_artist, :html => { :class => "form col-md-12 center-block" } do |f| %>
          <div class="form-group">  
            <%= f.text_field :medium, autofocus: true, :class => "form-control input-lg", placeholder: "Medium (ex. photographer, graphic designer...)" %>
          </div>
          <b>Address</b>
        	<%= f.fields_for :address do |builder| %>
	          <div class="form-group">  
	            <%= builder.text_field :street, autofocus: true, :class => "form-control input-lg", placeholder: "Street" %>
	          </div>
	          <div class="form-group">
	            <%= builder.text_field :city, autocomplete: "off", :class => "form-control input-lg", placeholder: "City" %>
	          </div>
	          <div class="form-group">
	            <%= builder.text_field :state, autocomplete: "off", :class => "form-control input-lg", placeholder: "State" %>
	          </div>
	          <div class="form-group">
	            <%= builder.text_field :zip, autocomplete: "off", :class => "form-control input-lg", placeholder: "Zip" %>
	          </div>
          <%end%>
	          <div class="form-group">
	            <%= f.submit "Done", :class => "btn btn-primary btn-lg btn-block" %>
	          </div>
        <% end %>
      </div>
      <div class="modal-footer">
          <div class="col-md-12">
          </div>
      </div>  
    </div>
  </div>
</div>
