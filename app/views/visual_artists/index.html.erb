<div class ="wrapper">
  <div id= "dating-background" class="col-lg-10 offset-2 pull-right text-center">
    <br><br>
      <div id="center"><p>
      <%= link_to "All Profiles", profiles_path, class: "btn btn-default btn-lg", id: "all-profiles-button" %>
      </p>
    </div>
      <br><br><br>
          <% @visual_artists.each do |visual_artist| %>
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <%= image_tag find_parent_profile(visual_artist.profile_id).image.url(:medium) %>
                <div class="caption">
                  <h3><%= link_to find_parent_profile(visual_artist.profile_id).name, profile_path(visual_artist.profile_id) %></h3>
                  <h4><%= find_parent_profile(visual_artist.profile.id).bio %></h4>
                    <%= visual_artist.medium %>
                </div>
              </div>
            </div>
          <% end %> 
    <%= will_paginate @profiles %>
  </div>
</div>


