<% if current_user.profile.id == @profile.id %>
<div class="wrapper">
  <div class="page-wrapper">
    <seciton class"panel">
      <div class="panel-heading">
        Edit Profile
      </div>
      <div class="panel-body">
          
        <%= form_for @profile, :html => { :class => "form col-md-12 center-block" } do |f| %>
          <div class="form-group">  
            <%= f.text_field :name, autofocus: true, :class => "form-control input-lg", placeholder: "Display Name" %>
          </div>
          <div class="form-group">  
            <%= f.text_field :phone_number, autofocus: true, :class => "form-control input-lg", placeholder: "Phone number" %>
          </div>
          <div class="form-group">
            <%= f.text_field :bio, autocomplete: "off", :class => "form-control input-lg", placeholder: "Bio" %>
          </div>
          <br/>
            <b>Upload a Profile Picture</b> <em>(required)</em>
            <%= f.file_field(:image)%>
          <br/>
          <div class="form-group">
            <%= f.submit "Save", :class => "btn btn-primary" %>
          </div>
        <% end %>
        <div>
          <%= link_to 'Delete Profile', user_registration_path, :confirm => 'Are you sure you want to destroy your account? Note: This will also get rid of all your photos and playlists.', :method => :delete, class: "fa fa-fw fa-trash-o" %>
        </div>
      </div>
    </section>
    <% else %>
    	<%= render partial: 'profiles/file_not_found' %>
    <% end %>
  </div>
</div>