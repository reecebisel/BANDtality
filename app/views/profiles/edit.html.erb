<% if current_user.profile.id == @profile.id %>
<div class="login-modal modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h1 class="text-center">Edit Profile</h1>
      </div>
      <div class="modal-body">
        <%= form_for @profile, :html => { :class => "form col-md-12 center-block" } do |f| %>
          <div class="form-group">  
            <%= f.text_field :name, autofocus: true, :class => "form-control input-lg", placeholder: "Display Name" %>
          </div>
          <div class="form-group">  
            <%= f.text_field :phone_number, autofocus: true, :class => "form-control input-lg", placeholder: "Phone number" %>
          </div>
          <div class="form-group">
            <%= f.text_field :bio, autocomplete: "off", :class => "form-control input-lg", placeholder: "Bio" %>
          </div>
          <br/>
            <b>Upload a Profile Picture</b> <em>(required)</em>
            <%= f.file_field(:image)%>
          <br/>
          <div class="form-group">
            <%= f.submit "Save", :class => "btn btn-primary btn-lg btn-block" %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
          <div class="col-md-12">

          </div>
      </div>  
    </div>
  </div>
</div>
<% else %>
	<%= render partial: 'profiles/file_not_found' %>
<% end %>
