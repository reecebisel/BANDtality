<div class="wrapper text-center">
  <h1>Artist <strong>"Dating"</strong></h1>
  <h2>Are you looking for love in all the wrong places?</h2>
  <p>
  <%= link_to "Musicians", musicians_path, class: "btn btn-primary btn-lrg" %>
  <%= link_to "Artists", visual_artists_path, class: "btn btn-primary btn-lrg" %>
  <%= link_to "Venue Reps", venue_reps_path, class: "btn btn-primary btn-lrg" %>
  </p>
  <h1 class="text-center browse-header">Profiles</h1>
      <% @profiles.each do |profile| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= image_tag profile.image.url(:medium) %>
            <div class="caption">
              <h3><%= link_to(profile.name, profile_path(profile.id), class: "btn btn-primary btn-md") %></h3>
              <h4><%= profile_type(profile) %></h4>
            </div>
          </div>
        </div>
      <% end %> 
  <%= will_paginate @profiles %>
</div>

