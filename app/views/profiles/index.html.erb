<section id= "dating-background" class= "text-center">
  <div id= "dating-background" class="col-lg-10 offset-2 pull-right">
    <h1 class="white-text">Artist <strong>"Dating"</strong></h1>
    <h2>Are you looking for love in all the wrong places?</h2>
    <p>
    <%= link_to "Musicians", musicians_path, class: "btn btn-default btn-lrg col-xs-6 col-sm-3" %>
    <%= link_to "Artists", visual_artists_path, class: "btn btn-default btn-lrg col-xs-6 col-sm-3" %>
    <%= link_to "Venue Reps", venue_reps_path, class: "btn btn-default btn-lrg col-xs-6 col-sm-3" %>
    </p>
    <br><br>
        <% @profiles.each do |profile| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= image_tag profile.image.url(:medium) %>
              <div class="caption">
                <h3><%= link_to(profile.name, profile_path(profile.id)) %></h3>
                <h4><%= profile_type(profile) %></h4>
                <h<%= link_to("", new_message_path(message_receiver_id: profile.id), class: "fa fa-envelope")%>
              </div>
            </div>
          </div>
        <% end %> 
    <%= will_paginate @profiles %>
  </div>
</section>




