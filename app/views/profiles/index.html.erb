<div class ="wrapper">
  <div id= "dating-background" class="col-lg-10 offset-2 pull-right text-center">
    <br><br>
      <h1 class="white-text">Artist <strong>Dating</strong></h1>
      <h3 class= "white-text">Are you looking for love in all the wrong places?</h3>
      <br><br>
      <div id="center"><p>
      <%= link_to "Musicians", musicians_path, class: "btn btn-default btn-lrg " %>
      <%= link_to "Artists", visual_artists_path, class: "btn btn-default btn-lrg" %>
      <%= link_to "Venue Reps", venue_reps_path, class: "btn btn-default btn-lrg " %>
      </p>
    </div>
      <br><br><br>
          <% @profiles.each do |profile| %>
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <%= image_tag profile.image.url(:medium) %>
                <div class="caption">
                  <h3><%= link_to(profile.name, profile_path(profile.id)) %></h3>
                  <h4><%= profile_type(profile) %></h4>
                  <h<%= link_to("", new_message_path(message_receiver_id: profile.id), class: "fa fa-envelope")%>
                </div>
              </div>
            </div>
          <% end %> 
    <%= will_paginate @profiles %>
  </div>
</div>


