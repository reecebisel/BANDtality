<section class="events_background">
	<section class="container">

			<h1>New Event</h1>

			<%= form_for @event, html: {multipart: true} do |f| %>
				<h4>Image:</h4>
				<%= f.file_field(:image)%>
				<br/>
				<h4>Event:</h4>
				<%= f.text_field(:event_name)%>
				<br/>
				<h4>Date:</h4>
				<%= f.date_select(:event_date)%>
				<br/>
				<h4>Time:</h4>
				<%= f.text_field(:start_time)%>
				</br>
				<h4>Description:</h4>
				<%= f.text_area(:event_desc)%>
				<br/>

				<a><%= f.submit("Submit")%></a>
			<%end%>
	</section>
</section>