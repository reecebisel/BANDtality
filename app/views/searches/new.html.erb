<div class="wrapper container">
	<h3>Advanced Search</h3>
	<%= form_for @search, html: {class:"pure-form"} do |f| %>
		<div class="form-group"> 
			<%= f.text_field :keywords, class: "form-control", placeholder: "keywords" %>
		</div>

		Musician
		<div class="form-group"> 
			<%= f.text_field :instrument, class: "form-control", placeholder: "Instrument (ex. voice, bass...)" %>
		</div>

		<div class="form-group"> 
			<%= f.text_field :genre, class: "form-control", placeholder: "Genre (ex. hiphop)" %>
		</div>

		Visual Artist
		<div class="form-group"> 
			<%= f.text_field :medium, class: "form-control", placeholder: "Medium (ex. photography)"  %>
		</div>

		Venue Representative
		<div class="form-group"> 
			<%= f.text_field :venue, class: "form-control", placeholder: "Venue name"  %>
		</div>
		<%= f.submit "Search", class: "btn btn-primary" %>
	<%end%>
</div>