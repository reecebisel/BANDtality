

<div class="wrapper">
	<div class ="page-wrapper">
		<div class="col-lg-12">
		  <section class="panel">
		      <div class="panel-heading">
		          New Message
		      </div>
	      <div class="panel-body">
	          <div class="form">
              <form action="#" class="form-horizontal">
                <div class="form-group">
                  <div class="col-sm-10">

										<%= form_for @message do |f| %>
										  <h4><%= f.text_field :subject, class: "input-lg text-center", placeholder: "Subject" %></h4>
										  <h4><%= f.cktext_area :message_body, class: "input-lg text-center", placeholder: "Type message here." %></h4>
										  <%= f.hidden_field :message_receiver_id, value: params[:message_receiver_id] %>
										  <%= f.submit 'Send', class: "btn btn-warning btn-lg" %>
									  <% end %>

                  </div>
                </div>
              </form>
	          </div>
	      </div>
		  </section>
		</div>
	</div>
</div>